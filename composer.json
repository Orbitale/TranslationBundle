{
    "name": "pierstoval/translation-bundle",
    "description": "Adds database management for Symfony2's native translator, a db to files translations extractor, a translation catcher whenever id or source is not found, and a translation UI to manage it.",
    "keywords": ["translate", "trans", "internationalization","translation","symfony2"],
    "homepage": "https://github.com/Pierstoval/TranslationBundle/",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "sensio/framework-extra-bundle": "~3.0",
        "symfony/framework-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "twig/twig": "~1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4"
    },
    "suggest": {
        "sonata-project/admin-bundle": "Useful to add an Admin interface to manage your translations with SonataAdminBundle"
    },
    "autoload": {
        "psr-4": {
            "Pierstoval\\Bundle\\TranslationBundle\\": ""
        }
    },
    "authors": [
        {
            "name": "Alex Pierstoval",
            "email": "pierstoval@gmail.com",
            "homepage": "http://www.pierstoval.com/"
        }
    ]
}
