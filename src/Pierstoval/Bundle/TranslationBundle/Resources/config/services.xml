<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="pierstoval_translate.translator.class">Pierstoval\Bundle\TranslationBundle\Translation\Translator</parameter>
        <parameter key="pierstoval_translate.translator.loader">Pierstoval\Bundle\TranslationBundle\Translation\TranslationLoader</parameter>

        <!-- Overrides the Symfony2's translator -->
        <parameter key="translator.class">%pierstoval_translate.translator.class%</parameter>
    </parameters>

    <services>
        <service id="pierstoval.twig.pierstoval_translation_extension" class="Pierstoval\Bundle\TranslationBundle\Twig\TranslationExtension">
            <tag name="twig.extension" />
            <argument type="service" id="translator" />
        </service>

        <service id="translation.loader.db" class="%pierstoval_translate.translator.loader%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="translation.loader" alias="db" />
        </service>
    </services>
</container>
