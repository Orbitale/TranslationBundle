<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pierstoval_translate.translator.class">Pierstoval\Bundle\TranslationBundle\Translation\Translator</parameter>
        <parameter key="pierstoval_translate.loader">Pierstoval\Bundle\TranslationBundle\Translation\TranslationLoader</parameter>
        <parameter key="pierstoval_translate.extractor.class">Pierstoval\Bundle\TranslationBundle\Translation\Extractor</parameter>
        <parameter key="pierstoval.translator.outputDirectory"></parameter>

        <!-- Overrides the Symfony2's translator. Disabled only when removing "import resources" for this file from config.yml -->
        <parameter key="translator.class">%pierstoval_translate.translator.class%</parameter>
    </parameters>

    <services>
        <!--<service id="pierstoval.twig.pierstoval_translation_extension" class="Pierstoval\Bundle\TranslationBundle\Twig\TranslationExtension">-->
            <!--<tag name="twig.extension" />-->
            <!--<argument type="service" id="translator" />-->
        <!--</service>-->

        <service id="translation.loader.db" class="%pierstoval_translate.loader%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="translation.loader" alias="db" />
        </service>

        <service id="pierstoval.translation.extractor" class="%pierstoval_translate.extractor.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="translation.writer" />
            <argument>%kernel.root_dir%</argument>
            <argument>%kernel.cache_dir%</argument>
            <argument>%pierstoval.translator.outputDirectory%</argument>
        </service>
    </services>
</container>
